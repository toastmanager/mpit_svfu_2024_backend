model Place {
    id Int @id @default(autoincrement())

    title          String
    type           PlaceType
    description    String
    locationName   String
    activity       Activity
    ageRestriction Int                                   @default(0) @map("ageRestrictions")
    price          Decimal                               @db.Money
    prevPrice      Decimal                               @default(0) @db.Money
    isPublished    Boolean                               @default(false)
    onModeration   Boolean                               @default(false)
    start          DateTime?
    end            DateTime?
    imageKeys      String[]
    coords         Unsupported("geometry(Point, 4326)")?
    address        String?
    contacts       String[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    authorId Int
    author   User @relation(fields: [authorId], references: [id])
    
    routes Route[]
    reviews PlaceReview[]

    @@index([coords], name: "location_idx", type: Gist)
    @@map("places")
}

enum PlaceType {
    LANDMARK
    RESTAURANT
    CAFE
    BEACH
    BAR
    MOVIE_THEATER
    NATURE
    MUSEUM
    CONCERT
}

enum Activity {
    SMALL
    MEDIUM
    ADVANCED
    HIGH
}

model PlaceReview {
    id Int @id @default(autoincrement())

    score Int
    text  String

    createdAt DateTime @default(now())

    authorId Int
    author   User  @relation(fields: [authorId], references: [id])
    placeId  Int
    place    Place @relation(fields: [placeId], references: [id])

    @@map("place_reviews")
}
